import tkinter as tk
from tkinter import messagebox
import random
import math

ROWS = 6
COLS = 7
PLAYER = 1
AI = 2
EMPTY = 0

class Connect4Game:
    def __init__(self):
        self.board = [[EMPTY for _ in range(COLS)] for _ in range(ROWS)]

    def reset_board(self):
        self.board = [[EMPTY for _ in range(COLS)] for _ in range(ROWS)]

    def make_move(self, col, piece):
        for r in range(ROWS-1, -1, -1):
            if self.board[r][col] == EMPTY:
                self.board[r][col] = piece
                return True
        return False

    def undo_move(self, col):
        for r in range(ROWS):
            if self.board[r][col] != EMPTY:
                self.board[r][col] = EMPTY
                break

    def is_valid_location(self, col):
        return self.board[0][col] == EMPTY

    def get_valid_locations(self):
        return [c for c in range(COLS) if self.is_valid_location(c)]

    def winning_move(self, piece):
        # Horizontal
        for r in range(ROWS):
            for c in range(COLS-3):
                if all(self.board[r][c+i] == piece for i in range(4)):
                    return True
        # Vertical
        for r in range(ROWS-3):
            for c in range(COLS):
                if all(self.board[r+i][c] == piece for i in range(4)):
                    return True
        # Positive diagonal
        for r in range(ROWS-3):
            for c in range(COLS-3):
                if all(self.board[r+i][c+i] == piece for i in range(4)):
                    return True
        # Negative diagonal
        for r in range(3, ROWS):
            for c in range(COLS-3):
                if all(self.board[r-i][c+i] == piece for i in range(4)):
                    return True
        return False

    def is_terminal(self):
        return self.winning_move(PLAYER) or self.winning_move(AI) or len(self.get_valid_locations()) == 0

    def score_position(self, piece):
        score = 0
        opp_piece = PLAYER if piece == AI else AI

        # Center column priority
        center_array = [self.board[r][COLS//2] for r in range(ROWS)]
        score += center_array.count(piece) * 3

        # Score all directions
        for r in range(ROWS):
            row_array = [self.board[r][c] for c in range(COLS)]
            for c in range(COLS-3):
                window = row_array[c:c+4]
                score += self.evaluate_window(window, piece)

        for c in range(COLS):
            col_array = [self.board[r][c] for r in range(ROWS)]
            for r in range(ROWS-3):
                window = col_array[r:r+4]
                score += self.evaluate_window(window, piece)

        for r in range(ROWS-3):
            for c in range(COLS-3):
                window = [self.board[r+i][c+i] for i in range(4)]
                score += self.evaluate_window(window, piece)

        for r in range(3, ROWS):
            for c in range(COLS-3):
                window = [self.board[r-i][c+i] for i in range(4)]
                score += self.evaluate_window(window, piece)

        return score

    def evaluate_window(self, window, piece):
        score = 0
        opp_piece = PLAYER if piece == AI else AI

        if window.count(piece) == 4:
            score += 100
        elif window.count(piece) == 3 and window.count(EMPTY) == 1:
            score += 10
        elif window.count(piece) == 2 and window.count(EMPTY) == 2:
            score += 4

        if window.count(opp_piece) == 3 and window.count(EMPTY) == 1:
            score -= 80

        return score

    def get_next_open_row(self, col):
        for r in range(ROWS-1, -1, -1):
            if self.board[r][col] == EMPTY:
                return r
        return None

    def minimax(self, depth, alpha, beta, maximizingPlayer):
        valid_locations = self.get_valid_locations()
        terminal = self.is_terminal()

        if depth == 0 or terminal:
            if terminal:
                if self.winning_move(AI):
                    return (None, 1e6)
                elif self.winning_move(PLAYER):
                    return (None, -1e6)
                else:
                    return (None, 0)
            else:
                return (None, self.score_position(AI))

        if maximizingPlayer:
            value = -math.inf
            best_col = random.choice(valid_locations)
            for col in valid_locations:
                row = self.get_next_open_row(col)
                self.board[row][col] = AI
                new_score = self.minimax(depth-1, alpha, beta, False)[1]
                self.board[row][col] = EMPTY
                if new_score > value:
                    value = new_score
                    best_col = col
                alpha = max(alpha, value)
                if alpha >= beta:
                    break
            return best_col, value
        else:
            value = math.inf
            best_col = random.choice(valid_locations)
            for col in valid_locations:
                row = self.get_next_open_row(col)
                self.board[row][col] = PLAYER
                new_score = self.minimax(depth-1, alpha, beta, True)[1]
                self.board[row][col] = EMPTY
                if new_score < value:
                    value = new_score
                    best_col = col
                beta = min(beta, value)
                if alpha >= beta:
                    break
            return best_col, value


class Connect4GUI(tk.Tk):
    def __init__(self):
        super().__init__()
        self.title("Connect 4 ‚Äì Smart AI Edition ü§ñ")
        self.configure(bg="#f0f2f5")

        self.game = Connect4Game()
        self.turn = PLAYER
        self.depth = 4  # AI difficulty level

        self.colors = {EMPTY: "white", PLAYER: "yellow", AI: "red"}
        self.create_widgets()

    def create_widgets(self):
        self.canvas = tk.Canvas(self, width=700, height=600, bg="royalblue", highlightthickness=0)
        self.canvas.grid(row=0, column=0, columnspan=7, padx=10, pady=10)
        self.draw_board()

        frame = tk.Frame(self, bg="#f0f2f5")
        frame.grid(row=1, column=0, columnspan=7, pady=10)

        self.status_label = tk.Label(frame, text="Your turn!", font=("Segoe UI", 12, "bold"), fg="green", bg="#f0f2f5")
        self.status_label.grid(row=0, column=0, padx=5)

        tk.Button(frame, text="Restart", command=self.restart_game, font=("Segoe UI", 10, "bold"), bg="#e3e3e3").grid(row=0, column=1, padx=10)
        tk.Button(frame, text="Let AI Start", command=self.ai_start, font=("Segoe UI", 10, "bold"), bg="#e3e3e3").grid(row=0, column=2, padx=10)

        self.canvas.bind("<Button-1>", self.click_column)

    def draw_board(self):
        self.canvas.delete("all")
        for r in range(ROWS):
            for c in range(COLS):
                x1 = c * 100 + 10
                y1 = r * 100 + 10
                x2 = x1 + 80
                y2 = y1 + 80
                color = self.colors[self.game.board[r][c]]
                self.canvas.create_oval(x1, y1, x2, y2, fill=color, outline="black", width=2)

    def click_column(self, event):
        col = event.x // 100
        if self.turn == PLAYER and self.game.is_valid_location(col):
            self.play_turn(col)

    def play_turn(self, col):
        self.game.make_move(col, PLAYER)
        if self.game.winning_move(PLAYER):
            self.update_board()
            self.show_game_over("üèÜ You win! Great job!", "green")
            return
        self.turn = AI
        self.update_board()
        self.status_label.config(text="AI thinking...", fg="red")
        self.after(800, self.ai_turn)

    def ai_turn(self):
        col, _ = self.game.minimax(self.depth, -math.inf, math.inf, True)
        self.game.make_move(col, AI)
        if self.game.winning_move(AI):
            self.update_board()
            self.show_game_over("ü§ñ AI wins! Better luck next time!", "red")
            return
        self.turn = PLAYER
        self.update_board()
        self.status_label.config(text="Your turn!", fg="green")

    def update_board(self):
        self.draw_board()

    def restart_game(self):
        self.game.reset_board()
        self.turn = PLAYER
        self.update_board()
        self.status_label.config(text="New game! Your turn.", fg="green")

    def ai_start(self):
        self.restart_game()
        self.turn = AI
        self.status_label.config(text="AI starts...", fg="red")
        self.after(800, self.ai_turn)

    def show_game_over(self, message, color):
        messagebox.showinfo("üéÆ Game Over", f"{message}\nTry again to beat the AI!")
        self.status_label.config(text=message, fg=color, font=("Segoe UI", 12, "bold", "italic"))


if __name__ == "__main__":
    app = Connect4GUI()
    app.mainloop()
